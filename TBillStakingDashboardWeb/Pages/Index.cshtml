@page
@model TBillStaking.Pages.IndexModel
@{
}
<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link href="~/css/dashboard.css?1" rel="stylesheet">
    <script src="js/jquery.min.js"></script>

    <script type="text/javascript" src="js/dashboard.js?10" charset="utf-8"></script>



    <title>TBill staking dashboard</title>
</head>

<body class="bg-dark text-light" style="padding-top: 60px;">

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
            crossorigin="anonymous"></script>

    <div class="container-fluid">
        <nav class="navbar fixed-top navbar-light bg-light">
            <div class="container-fluid">
                <div class="d-flex justify-content-between" style="width: 100%;">
                    <div class=""></div>
                    <div class="">
                        <div>
                            <img height="20" src="~/img/tbill.svg" />&nbsp;$<label id="tbillRateTop"></label>
                            &nbsp;&nbsp;
                            <img height="20" src="~/img/tfuel.svg" />&nbsp;$<label id="tfuelPriceTop"></label>
                        </div>
                    </div>
                    <div class="">
                        <div class="form-check form-switch">
                            <label class="form-check-label" for="lightSwitch"> Dark Mode </label>
                            <input class="form-check-input" type="checkbox" id="lightSwitch" />
                        </div>
                    </div>

                </div>

            </div>
        </nav>
        <form id="walletForm">
            <div class="row">
                <div class="col ">

                </div>
                <div class="col-md-10 col-sm-12">

                    <h1>TBill staking dashboard</h1>
                    <div class="row">
                        &nbsp;
                    </div>

                    <div class="row">
                        <div class="col-6">

                            <h4>TBill stats</h4><small>(refreshed every hour)</small>
                            <div class="row">
                                <div class="col-lg-3 col-sm-12">
                                    <p>
                                        <strong>Total LP Activated</strong>
                                        <br />
                                        <label id="tvLocked" class="form-label">@Model.tvLocked USD</label>
                                    </p>

                                </div>
                                <div class="col-lg-3 col-sm-12">
                                    <p>
                                        <strong>Total Rewards</strong>
                                        <br />
                                        <label id="rewards" class="form-label">@Model.rewards USD</label>
                                    </p>

                                </div>
                                <div class="col-lg-3 col-sm-12">
                                    <p>
                                        <strong>Total Activated TBILL</strong><br />
                                        <label id="tbillLocked" class="form-label">@Model.tbillLocked TBILL</label>
                                    </p>
                                </div>
                                <div class="col-lg-3 col-sm-12">
                                    <p>
                                        <strong>Total Activated TFUEL</strong><br />
                                        <label id="tfuelLocked" class="form-label">@Model.tfuelLocked TFUEL</label>
                                    </p>
                                </div>


                            </div>

                        </div>


                        <div class="col-6">

                            <h4>Rebase</h4><small>(live data)</small>
                            <div class="row">
                                <div class="col-lg-2 col-sm-12">
                                    <p>
                                        <strong>Current Oracle:</strong>
                                        <br />
                                        <label id="tbillRate" class="form-label"></label>
                                    </p>

                                </div>
                                <div class="col-lg-2 col-sm-12">
                                    <p>
                                        <strong>24hr Oracle:</strong>
                                        <br />
                                        <label id="rebaseRate" class="form-label"></label>
                                    </p>

                                </div>
                                <div class="col-lg-2 col-sm-12">
                                    <p>
                                        <strong>Rebase Target:</strong><br />
                                        <label id="targetRate" class="form-label"></label>
                                    </p>
                                </div>
                                <div class="col-lg-2 col-sm-12">
                                    <p>
                                        <strong>Positive Rebase Price:</strong><br />
                                        <label id="noRebaseRangeTop" class="form-label"></label>
                                    </p>
                                </div>
                                <div class=col-lg-2 col-sm-12">
                                    <p>
                                        <strong>Negative Rebase Price:</strong><br />
                                        <label id="noRebaseRangeBottom" class="form-label"></label>
                                    </p>
                                </div>
                                <div class=col-lg-2 col-sm-12">
                                    <p>
                                        <strong>TFuel Price:</strong><br />
                                        <label id="tfuelPrice" class="form-label"></label>
                                    </p>
                                </div>
                            </div>
                        </div>

                    </div>

                    <div class="row">
                        <h4>Wallet stats</h4>
                        <div class="col-8">
                            <div class="input-group">
                                <input type="text" class="form-control" placeholder="Wallet address" aria-label="Wallet address" id="walletAddress" value="@Model.Wallet">

                                <div class="input-group-append">
                                    <button type="submit" id="submitBtn" class="btn btn-primary">Submit</button>
                                </div>
                            </div>


                        </div>
                        <div class="col-4">

                        </div>

                    </div>

                    <div class="row">
                        &nbsp;
                    </div>
                    <div class="row">
                        <div class="table-wrapper">
                            <table id="rewardsTable" class="table table-light table-sm">
                                <thead>
                                    <tr>
                                        <td>Time</td>
                                        <td class="text-end">TBill 1x</td>
                                        <td class="text-end">TBill 1,5x</td>
                                        <td class="text-end">TBill 2x</td>
                                        <td class="text-end">TFuel 1x</td>
                                        <td class="text-end">TVL</td>
                                        <td class="text-end">MTVL</td>
                                        <td class="text-end">Rewards</td>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr></tr>
                                </tbody>
                            </table>

                        </div>
                    </div>
                    <div class="row">
                        &nbsp;
                    </div>
                    <div class="row">
                        <div class="table-wrapper">
                        <table id="dailyRewardsTable" class="table table-light table-sm">
                            <thead>
                                <tr>
                                    <td>Date</td>
                                    <td class="text-end">TBill 1x</td>
                                    <td class="text-end">TBill 1,5x</td>
                                    <td class="text-end">TBill 2x</td>
                                    <td class="text-end">TFuel 1x</td>
                                    <td class="text-end">TVL</td>
                                    <td class="text-end">MTVL</td>
                                    <td class="text-end">Rewards</td>
                                </tr>
                            </thead>
                            <tbody>
                                <tr></tr>
                            </tbody>
                        </table>
                        </div>
                    </div>

                    <div class="row">
                        &nbsp;
                    </div>
                    <div class="row">
                        <h4>NFT market</h4><small>(prices in TFuel, refreshed every 10 minutes)</small>
                        <table id="nftStats" class="table table-sm table-light">
                            <thead>
                                <tr>
                                    <td>Name</td>
                                    <td class="text-end">Sold</td>
                                    <td class="text-end">Available For Sale</td>
                                    <td class="text-end">Cheapest avail. now</td>
                                    <td class="text-end">USD</td>
                                    <td class="text-end">Avg Price For Next 5 avail.</td>
                                </tr>
                            </thead>
                            <tbody>
                                @{

                                    @foreach (var record in Model.NFTs)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => record.Name)
                                            </td>
                                            <td class="text-end">
                                                @Html.DisplayFor(modelItem => record.Sold)
                                            </td>
                                            <td class="text-end">
                                                @Html.DisplayFor(modelItem => record.AvailableForSale)
                                            </td>
                                            <td class="text-end">
                                                @Html.DisplayFor(modelItem => record.CurrentSalePrice)
                                            </td>
                                            <td class="text-end">
                                                $@Html.DisplayFor(modelItem => record.CurrentSalePriceUsd)
                                            </td>
                                            <td class="text-end">
                                                @Html.DisplayFor(modelItem => record.AvgPriceForNext5ForSale)
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                        <div class="table-wrapper">
                            <table id="nftStats" class="table table-sm table-light">
                                <thead>
                                    <tr>
                                        <td>Timestamp</td>
                                        <td>Name</td>
                                        <td class="text-end">Sold for</td>
                                        <td class="text-end">Sold for USD</td>
                                        <td class="text-end">Buyer (bought in total)</td>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{

                                        @foreach (var record in Model.NFTSales)
                                        {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => record.Timestamp)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => record.Name)
                                        </td>
                                        <td class="text-end">
                                            @Html.DisplayFor(modelItem => record.Price)
                                        </td>
                                        <td class="text-end">
                                            $@Html.DisplayFor(modelItem => record.PriceUsd)
                                        </td>
                                        <td class="text-end">
                                            @Html.DisplayFor(modelItem => record.Buyer)
                                        </td>
                                    </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>

                </div>
                <div class="col">

                </div>
            </div>
        </form>
    </div>
    @* this script needs to be at the end to make sure all componenets are toggled *@
    <script type="text/javascript" src="js/switch.js?2"></script>
</body>

</html>